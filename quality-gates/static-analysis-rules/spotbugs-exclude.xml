<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude all EI_EXPOSE_REP warnings globally -->
    <!-- These occur in data classes that intentionally return mutable objects -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
    <Match>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>
    
    <!-- Exclude CT_CONSTRUCTOR_THROW warnings - Spring Boot classes with exception handling -->
    <Match>
        <Bug pattern="CT_CONSTRUCTOR_THROW"/>
    </Match>
</FindBugsFilter>
